{
  "kind": "collectionType",
  "collectionName": "dishes",
  "info": {
    "singularName": "dish",
    "pluralName": "dishes",
    "displayName": "Dish"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "dish_name": {
      "type": "uid",
      "targetField": "name"
    },
    "description": {
      "type": "text",
      "required": true,
      "unique": false
    },
    "price": {
      "type": "decimal",
      "required": true,
      "default": 0,
      "min": 0
    },
    "currency": {
      "type": "enumeration",
      "default": "CUP",
      "enum": [
        "CUP",
        "EUR"
      ]
    },
    "cover_image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "ingredients": {
      "type": "component",
      "component": "shared.ingredient",
      "repeatable": true
    }
  }
}
