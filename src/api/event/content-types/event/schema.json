{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "event_name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "start_date": {
      "type": "datetime",
      "required": true
    },
    "duration": {
      "type": "time",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "event_name"
    },
    "address": {
      "type": "string",
      "default": "Centro Andaluz de la Habana en Prado 356-358, entre Neptuno y Virtudes",
      "required": true
    },
    "event_type": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::event-type.event-type",
      "inversedBy": "events"
    },
    "cover_image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "is_free": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "price": {
      "type": "decimal",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "is_free"
            },
            false
          ]
        }
      },
      "required": true,
      "default": 0,
      "min": 0
    },
    "artists": {
      "type": "component",
      "component": "shared.artist",
      "repeatable": true
    }
  }
}
